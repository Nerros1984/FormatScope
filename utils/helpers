import locale
from datetime import datetime

def get_day_name_es(fecha: str) -> str:
    """
    Devuelve el nombre del día en español (ej: lunes, martes...) desde una fecha YYYY-MM-DD
    """
    try:
        # Establecer idioma español
        locale.setlocale(locale.LC_TIME, 'es_ES.UTF-8')
    except:
        # Compatibilidad con sistemas que no tengan es_ES.UTF-8
        locale.setlocale(locale.LC_TIME, 'es_ES')

    fecha_dt = datetime.strptime(fecha, "%Y-%m-%d")
    return fecha_dt.strftime("%A").capitalize()
